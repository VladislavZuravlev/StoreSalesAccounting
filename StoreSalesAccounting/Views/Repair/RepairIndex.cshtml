@model IEnumerable<StoreSalesAccounting.Models.Repair>

<!DOCTYPE html>
<html>
<head>
    <title>Ремонт</title>
    <meta charset="utf-8" />
</head>
<div class="row">
    <div class="col-3">
        <div class="card">
            <div align="center">
                <h2>Активный ремонт на @DateTime.Today.ToShortDateString()</h2>
                <form>
                    <div>
                        <label >Номер телефона:</label>
                        <input type="text" name="phoneNumber"/>
                        <label >Дата поступления c:</label>
                        <input type="date" name="startDate"/>
                        <label >по:</label>
                        <input type="date" name="endDate"/>
                        <input type="submit" class="btn btn-green" value="Фильтр" />
                    </div>
                </form>
            </div>            
            <div class="card-body">
                <table class="table" >
                    <tr>
                        <th width="10%">Дата поступления</th>
                        <th width="5%">Кто принял</th>
                        <th width="5%">Мастер</th>
                        <th width="10%">Имя клиента</th>
                        <th width="10%">Телефон клиента</th>
                        <th width="10%">Инструмент</th>
                        <th width="30%">Тех задание</th>
                        <th width="5%">Свой чехол</th>
                        <th width="10%">Дата окончания ремонта</th>
                        <th width="5%">Выдано?</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RepairStartDate.ToShortDateString()</td>
                            <td>@item.ReceivingEmployee</td>
                            <td>@item.Master</td>
                            <td>@item.ClientName</td>
                            <td>@item.ClientNumber</td>
                            <td>@item.MusicalInstrument</td>
                            <td>@item.TechnicalTask</td>
                            <td>@item.GuitarCase</td>
                            <td>@item.RepairEndDate.ToShortDateString()</td>
                            <td>@item.GiveAway</td>
                            <td>
                                <a class="link-green" asp-action="Edit" asp-controller="Repair" asp-route-id="@item.RepairId">Изменить</a>
                            </td>
                            <td>
                                <a class="link-green" asp-action="IssueTool" asp-controller="Repair" asp-route-id="@item.RepairId">Выдать</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="CreateNewRepair"><span class="btn btn-green">Заявка на ремонт</span></a>                
            </div>
        </div>
    </div>
</div>
</html>
